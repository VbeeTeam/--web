/* pages/cart/cart.wxss */
page {
  height: 100%;
  background-color: #eeeeee;
}

.content_top {
  display: flex;
  justify-content: space-between;
  padding: 34rpx 30rpx;
}

.content_top text:nth-child(1) {
  font-size: 26rpx;
  color: #2d2d2d;
}

.content_top text:nth-child(2) {
  font-size: 24rpx;
  color: #de8f80;
}
.cart_list{
  padding-bottom: 150rpx;
}
.list_box{
  background-color: #ffffff;
  padding: 35rpx 25rpx;
  margin-bottom: 30rpx;
}
.list {
  display: flex;
  align-items: center;
}

/* 修改checkbox的样式 */
checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
  padding: 8rpx;
}

/* 修改选中的样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: #2d2d2d;
}

/* 修改选中图标的样式 ：√ */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #fff;
  font-weight: bold;
}

.list image {
  width: 205rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin: 0 30rpx 0 20rpx;
}
.list_right{
  width: 410rpx;
}
.list_title {
  font-size: 26rpx;
  color: #2d2d2d;
  line-height: 32rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.list_style{
  font-size: 24rpx;
  color: #727272;
  margin: 20rpx 0 40rpx;
}
.list_price{
  display: flex;
  justify-content: space-between;
}
.list_price .price{
  font-size: 26rpx;
  color: #de8f80;
  font-weight: bold;
}
.step{
  display: flex;
  align-items: center;
}
.step text:nth-child(1){
  font-size: 32rpx;
  padding: 5rpx 10rpx;
}
.step text:nth-child(2){
    display: inline-block;
    width: 62rpx;
    height: 42rpx;
    border-radius: 10rpx;
    background-color: #eeeeee;
    text-align: center;
    line-height: 42rpx;
    font-size: 22rpx;
    margin: 0 20rpx;
}
.step text:nth-child(3){
    font-size: 32rpx;
    padding: 5rpx 10rpx;
}
.list_bot{
  font-size: 26rpx;
  color: #2d2d2d;
  font-weight: bold;
  margin-top: 50rpx;
  text-align: center;
}
.cart_total{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 25rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
  border-top: 1px solid #cfcfcf;
}
.total text:nth-child(1){
  font-size: 26rpx;
  color: #727272;
}
.total text:nth-child(2){
  font-size: 36rpx;
  color: #cf5d53;
}
.cart_total .btn{
  width: 225rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #cf5d53;
  font-size: 26rpx;
  color: #fff;
  border-radius: 25px;
  text-align: center;
}